# Minecraft Mod Manager Configuration
# Скопируйте этот файл в .env и настройте под ваши нужды

# Путь к корневой папке Minecraft сервера
MINECRAFT_ROOT_PATH=/home/mc/server

# Включить автообновления (true/false)
ENABLE_AUTO_UPDATE=true

# Интервал проверки обновлений в часах
UPDATE_INTERVAL=2

# Путь к server.properties (оставьте пустым для автоопределения)
SERVER_PROPERTIES_PATH=

# Тип загрузчика модов (fabric/forge)
MOD_LOADER=fabric

# Время кэширования API запросов в секундах
API_CACHE_TTL=300

# Создавать резервные копии состояния (true/false)
BACKUP_STATE=true

# Уровень логирования (DEBUG/INFO/WARNING/ERROR)
LOG_LEVEL=INFO

# Максимальное количество одновременных загрузок
MAX_CONCURRENT_DOWNLOADS=3

# Таймаут загрузки в секундах
DOWNLOAD_TIMEOUT=30

# Количество попыток повтора при ошибке
RETRY_ATTEMPTS=3

# Порт для FastAPI сервера
PORT=8000

# Хост для FastAPI сервера
HOST=0.0.0.0